# Relay core
NODE_ENV=production
PORT=8080
RELAY_NAME=relay1.matrus.org
RELAY_DESCRIPTION=Self-hosted Nostr relay
DATABASE_URL=postgres://user:password@postgres:5432/nostr
REDIS_URL=redis://redis:6379
MAX_MESSAGE_SIZE=2097152

# nip-96
NIP96_PORT=3001
STORAGE_METHOD=local
MAX_FILE_SIZE=52428800
LOCAL_DIR=/data/uploads
# When behind Caddy at /nip96, set a path prefix so returned URLs work (e.g., http://host/nip96/media/..)
BASE_URL=/nip96
NIP98_REQUIRED=true

# TLS / domain
DOMAIN=relay1.matrus.org

# --- Production hints ---
# For production, set:
# BASE_URL=https://relay1.matrus.org
# And update Caddyfile server block to your domain (remove "tls internal").
