{
  "port": 8080,
  "maxMessageSize": 10485760, // 10 MB
  "fileUpload": {
    "enabled": true,
    "maxFileSize": 52428800, // 50 MB
    "allowedFileTypes": ["image/jpeg", "image/png", "application/pdf", "text/plain"]
  },
  "database": {
    "type": "postgres",
    "host": "localhost",
    "port": 5432,
    "username": "your_username",
    "password": "your_password",
    "database": "nostr_relay"
  },
  "redis": {
    "host": "localhost",
    "port": 6379
  },
  "logging": {
    "level": "info",
    "file": "logs/relay.log"
  },
  "retentionPolicy": {
    "eventRetentionDays": 30
  },
  "rateLimiting": {
    "maxRequestsPerMinute": 100
  }
}