{
  "server": {
    "port": 8080,
    "host": "0.0.0.0",
    "protocol": "http",
    "websocket": {
      "port": 8081,
      "path": "/ws"
    }
  },
  "database": {
    "postgres": {
      "host": "postgres",
      "port": 5432,
      "username": "user",
      "password": "password",
      "database": "nostr"
    },
    "redis": {
      "host": "redis",
      "port": 6379
    }
  },
  "fileStorage": {
    "maxFileSize": 10485760,
    "storageType": "local",
    "s3": {
      "bucket": "your_bucket_name",
      "region": "your_region",
      "accessKeyId": "your_access_key_id",
      "secretAccessKey": "your_secret_access_key"
    }
  },
  "rateLimiting": {
    "maxRequests": 100,
    "windowMs": 60000
  },
  "eventRetention": {
    "maxAge": 604800
  },
  "logging": {
    "level": "info",
    "file": "logs/server.log"
  }
}